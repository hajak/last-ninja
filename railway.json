{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd server && pnpm install && pnpm build && cd ../client && pnpm install && pnpm build"
  },
  "deploy": {
    "startCommand": "cd server && node dist/server/src/index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
